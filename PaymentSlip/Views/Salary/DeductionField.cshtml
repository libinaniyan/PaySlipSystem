@model PaymentSlip.Models.DeductionModel
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="deductions">

       <table class="deductions-table">
        <tr class="deductionsRow">
            <td>
                <div class="form-group">
                    @Html.LabelFor(model => model.DeductionType, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EnumDropDownListFor(model => model.DeductionType, htmlAttributes: new { @class = "deductionType form-control" })
                        @Html.ValidationMessageFor(model => model.DeductionType, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
            <td>
                <div class="form-group">
                    @Html.LabelFor(model => model.DeductionAmount, htmlAttributes: new { @class = "control-label " })
                    <div>
                        @Html.EditorFor(model => model.DeductionAmount, new { htmlAttributes = new { @class = "deductionAmount form-control" } })
                        @Html.ValidationMessageFor(model => model.DeductionAmount, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
            <td>
                <button type="button" class="removeDeduction btn btn-danger mt-4">Remove</button>
            </td>
        </tr>
       </table>
    </div>
    @Html.Hidden("DeductionsJson", "")
</div>
}


